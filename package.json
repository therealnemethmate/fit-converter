{
    "name": "@fit-converter/web",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "build": "pnpm build:pkg && pnpm build:web",
        "build:dev": "VUE_DEVTOOLS=true pnpm build",
        "build:pkg": "pnpm --filter='@fit-converter/*' --filter='!@fit-converter/web' build",
        "build:web": "vue-tsc --noEmit && vite build",
        "clean": "concurrently 'pnpm:clean:web' 'pnpm:clean:pkg'",
        "clean:pkg": "pnpm --filter='@fit-converter/*' --filter='!@fit-converter/web' clean",
        "clean:web": "rm -rf dist",
        "deploy": "helm upgrade --install -f local.values.yaml fit-converter-web ./helm",
        "dev": "vite --port 3001",
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore $ESLINT_FLAGS",
        "preview": "pnpm build && pnpm preview:web",
        "preview:dev": "pnpm build:dev && pnpm preview:web",
        "preview:web": "vite preview --port 3001",
        "start": "pnpm dev"
    },
    "devDependencies": {
        "@fit-converter/eslint": "workspace:*",
        "@fit-converter/fit-sdk": "workspace:*",
        "@fit-converter/tailwind": "workspace:*",
        "@fit-converter/tsconfig": "workspace:*",
        "@fit-converter/zwo-sdk": "workspace:*",
        "@rushstack/eslint-patch": "^1.3.3",
        "@types/node": "^18.17.4",
        "@vitejs/plugin-vue": "^4.2.3",
        "@vitest/coverage-v8": "^0.34.1",
        "@vue/eslint-config-typescript": "^11.0.3",
        "buffer": "^6.0.3",
        "client-zip": "^2.4.4",
        "concurrently": "^8.2.0",
        "husky": "^8.0.3",
        "pinia": "^2.1.6",
        "typescript": "^5.1.6",
        "vite": "^4.4.9",
        "vitest": "^0.34.1",
        "vue": "^3.3.4",
        "vue-router": "^4.2.4",
        "vue-tsc": "^1.8.8"
    }
}
